pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your SCM (e.g., Git)
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Run Maven clean and package goals to build the JAR file
                sh 'mvn clean package'
            }
        }
    }
    
    post {
        success {
            // Archive the JAR file as an artifact
            archiveArtifacts(artifacts: 'target/*.jar', allowEmptyArchive: true)
        }
    }
}
